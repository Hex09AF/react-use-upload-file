{
  "name": "react-use-upload-file",
  "type": "module",
  "version": "0.1.3",
  "description": "A React hook for handling file uploads.",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "homepage": "https://github.com/Hex09AF/react-use-upload-file#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Hex09AF/react-use-upload-file.git"
  },
  "bugs": {
    "url": "https://github.com/Hex09AF/react-use-upload-file/issues"
  },
  "license": "MIT",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "clean": "rm -rf dist",
    "build:esm": "bun build ./src/index.ts --outdir ./dist --target browser --format esm --sourcemap",
    "build:cjs": "bun build ./src/index.ts --outdir ./dist --target browser --format cjs --sourcemap",
    "build:types": "tsc --emitDeclarationOnly --declaration --outDir dist",
    "build": "bun run clean && bun run build:esm && bun run build:cjs && bun run build:types",
    "prepublishOnly": "bun run build"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@happy-dom/global-registrator": "^17.4.7",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/bun": "latest",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "prettier": "^3.5.3",
    "react": "^19",
    "typescript": "^5.8.3"
  }
}
